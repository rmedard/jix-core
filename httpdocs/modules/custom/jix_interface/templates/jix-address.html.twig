<div class="card footer-block">
    <div class="card-header"><i class="fas fa-home"></i> {{ title }}</div>
    <div class="card-body">
      <ul class="list-group">
        <li class="list-group-item border-0 py-1 px-0 justify-content-around">{{ drupal_token('site:name') }} - {{ owner }}</li>
        <li class="list-group-item border-0 py-1 px-0"><i class="fas fa-map-marker-alt"></i> {{ address1 }}</li>
        <li class="list-group-item border-0 py-1 px-0"><i class="fas fa-envelope"></i> {{ address2 }}</li>
        <li class="list-group-item border-0 py-1 px-0"><i class="fas fa-phone"></i> {{ phone }}</li>
        <li class="list-group-item border-0 py-1 px-0"><i class="fas fa-at"></i> {{ drupal_token('site:mail') }}</li>
      </ul>
    </div>
</div>
