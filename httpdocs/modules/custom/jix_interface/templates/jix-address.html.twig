<div class="card border-primary">
    <div class="card-header pl-3 bg-primary text-white"><i class="fas fa-home"></i> {{ title }}</div>
    <div class="card-body p-3">
        <p class="mb-2">{{ drupal_token('site:name') }} - {{ owner }}</p>
        <p class="mb-2"><i class="fas fa-map-marker-alt"></i> {{ address1 }} </p>
        <p class="mb-2"><i class="fas fa-envelope"></i> {{ address2 }}</p>
        <p class="mb-2"><i class="fas fa-phone"></i> {{ phone }}</p>
        <p class="mb-2"><i class="fas fa-at"></i> {{ drupal_token('site:mail') }}</p>
    </div>
</div>
