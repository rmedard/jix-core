<div class="card footer-block">
  <div class="card-header">
      <i class="fas fa-globe-africa"></i> {{ title }}
    </div>
    <div class="card-body">
        {% for site in sites %}
            {% set site = site|split(':') %}
            <i class="fa fa-check"></i><a href="{{ 'https://' ~ site[1]|lower|trim }}" target="_blank"> {{ site[0]|trim }}</a><br>
        {% endfor %}
    </div>
</div>
